extends ../../includes/layoutDining
block diningContent
    ol.breadcrumb
        li
            a(href="/") Home
        li
            a(href="/dining") Restaurant Info
        li.active  Beers & More
    img.img-responsive.border(src='/assets/barSign2.png')
    each val in viewBag.wineByGlass.Menu.Sections.Section
            section.wines
                h3= val.SectionTitle
                hr(style="padding: 0px; margin: 0px")
                ul.list-unstyled.wineList
                    if(!Array.isArray(val.MenuItems.MenuItem))
                        - var singleItem = val.MenuItems.MenuItem
                        li= singleItem.WineVintage + '  ' + singleItem.WineryName + ' - ' + singleItem.WineName + '  ' 
                                strong= utils.getPriceNoCents(singleItem.MenuPrice,false)
                    else
                        each item in val.MenuItems.MenuItem
                            li= item.WineVintage + '  ' + item.WineryName + ' - ' + item.WineName + '  ' 
                                strong= utils.getPriceNoCents(item.MenuPrice,false)
                
    p= viewBag.wineByGlass.Menu.Footer


